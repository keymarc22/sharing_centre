<div
  role="status"
  aria-live="polite"
  data-controller="ui--toast <%= options[:controller] %>"
  data-ui--toast-auto-hide-value="<%= @auto_hide %>"
  data-ui--toast-timeout-value="<%= @timeout %>"
  class="toast transform transition ease-out duration-300 -translate-x-4 opacity-0 pointer-events-auto"
>
  <div class="max-w-sm w-full <%= variant_classes %> <%= options[:class]%> ring-1 ring-black/5 shadow-md rounded-md p-3 flex items-center gap-1">
    <div class="flex-shrink-0" aria-hidden="true">
      <%= lucide_icon icon_svg %>
    </div>
    <div class="flex-1 text-sm">
      <%= @message %>
    </div>
    <button
      type="button"
      data-action="ui--toast#hide"
      class="ml-3 inline-flex text-slate-500 hover:text-slate-700 focus:outline-none"
      aria-label="Close"
    >
      <%= lucide_icon 'x', class: text_color %>
    </button>
  </div>
</div>