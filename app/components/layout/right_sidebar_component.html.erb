<div class="right-sidebar">
  <!-- Profile Section -->
  <div class="profile-section">
    <div class="profile-avatar">
      <%# image_tag current_user[:avatar], alt: "#{current_user[:name]}'s avatar" %>
    </div>
    <h3 class="profile-name"><%= current_user[:name] %></h3>
    <p class="profile-role"><%= current_user[:role] %></p>
    <%# <button class="profile-button">Profile</button> %>
  </div>

  <!-- Calendar -->
  <%= render Calendar::MainComponent.new %>

  <!-- Reminders -->
  <%# render 'shared/reminders', reminders: reminders %>
</div>
