<div class="welcome-text">
  <h1><%= t('devise.sessions.new.welcome') %></h1>
  <p><%= t('devise.sessions.new.sign_in_prompt') %></p>
  <span class="language-badge"><%= t('devise.sessions.new.language') %></span>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { controller: 'toggle-password' } }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, t('devise.sessions.new.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password, t('devise.sessions.new.password').capitalize %>
    <div class="password-wrapper">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", data: { 'toggle-password-target': 'password' }, required: true %>
      <button type="button" class="toggle-password" data-action="click->toggle-password#toggle" data-toggle-password-target="toggle">
        <%= lucide_icon 'eye', class: 'open' %>
        <%= lucide_icon 'eye-closed', class: 'closed' %>
      </button>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="d-flex gap-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: 'm0' %>
    </div>
  <% end %>

  <div class="forgot-password">
    <a href="<%= new_password_path(resource_name) %>"><%= t('devise.sessions.new.forgot_password').capitalize %></a>
  </div>

  <%= f.submit t('devise.sessions.new.sign_in'), class: 'btn-login' %>
<% end %>

