<div class="welcome-text">
  <h1><%= t('devise.sessions.new.welcome') %></h1>
  <p><%= t('devise.sessions.new.sign_in_prompt') %></p>
  <span class="language-badge"><%= t('devise.sessions.new.language') %></span>
</div>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { data: { controller: 'toggle-password' } } do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <%= f.input :email, label: t('devise.sessions.new.email') %>

  <%= render Forms::InputPasswordComponent.new(f:)%>

  <% if devise_mapping.rememberable? %>
    <div class="d-flex gap-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: 'm0' %>
    </div>
  <% end %>

  <div class="forgot-password">
    <a href="<%= new_password_path(resource_name) %>"><%= t('devise.sessions.new.forgot_password').capitalize %></a>
  </div>

  <%= f.submit t('devise.sessions.new.sign_in'), class: 'btn-login' %>
<% end %>

