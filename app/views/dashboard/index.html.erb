<div class="dashboard-container" data-controller="dashboard">
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <%= render 'shared/sidebar' %>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Header -->
      <%= render 'shared/header', current_user: @current_user %>

      <!-- Welcome Section -->
      <%= render 'dashboard/welcome_section' %>

      <!-- Classes Section -->
      <%= render 'dashboard/classes_section', classes: @classes %>

      <!-- Lessons Table -->
      <%= render 'dashboard/lessons_section', lessons: @lessons %>
    </div>

    <!-- Right Sidebar -->
    <%= render 'shared/right_sidebar', current_user: @current_user, reminders: @reminders, calendar_date: @calendar_date %>
  </div>
</div>
