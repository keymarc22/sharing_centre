<div class="dashboard-container" data-controller="dashboard">
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <%= render Layout::SidebarComponent.new %>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Header -->
      <%= render Layout::HeaderComponent.new %>

      <!-- Welcome Section -->
      <%= render 'dashboard/welcome_section' %>

      <!-- Classes Section -->
      <%= render 'dashboard/classes_section', classes:[] %>

      <!-- Lessons Table -->
      <%= render 'dashboard/lessons_section', lessons: [] %>
    </div>

    <!-- Right Sidebar -->
    <%= render Layout::RightSidebarComponent.new %>
  </div>
</div>
